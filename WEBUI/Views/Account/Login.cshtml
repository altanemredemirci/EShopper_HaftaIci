@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<div class="login-form">
					<!--login form-->
					<h2>Giriş Paneli</h2>
				@* 	<form action="/Account/Login">
						@Html.AntiForgeryToken() *@
					<form asp-action="Login" asp-controller="Account">
						@* <input type="email" name="Email" placeholder="Email Adresi" /> *@
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<input asp-for="Email" placeholder="Email Adresi" />
						<span asp-validation-for="Email" class="text-danger"></span>

						<input asp-for="Password" placeholder="Şifre" />
						<span asp-validation-for="Password" class="text-danger"></span>

						<button type="submit" class="btn btn-default">Giriş</button>
					</form>
				</div><!--/login form-->
			</div>
			
		</div>
	</div>
</section><!--/form-->

