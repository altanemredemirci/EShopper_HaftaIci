@model CreateApplicaitonUserDTO
@{
	ViewData["Title"] = "Login";
}

<section id="form">
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<div class="login-form">
					<!--register form-->
					<h2>Kayıt Paneli</h2>
					<form asp-action="Register" asp-controller="Account">	
						
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>

						<input asp-for="Name" placeholder="Ad" />						
						<span asp-validation-for="Name" class="text-danger"></span>

						<input asp-for="Surname" placeholder="Soyad" />
						<span asp-validation-for="Surname" class="text-danger"></span>

						<input asp-for="Email" placeholder="Email Adresi" />
						<span asp-validation-for="Email" class="text-danger"></span>

						<input asp-for="Password" placeholder="Şifre" />
						<span asp-validation-for="Password" class="text-danger"></span>

						<input asp-for="RePassword" placeholder="Şifre" />
						<span asp-validation-for="RePassword" class="text-danger"></span>

						<button type="submit" class="btn btn-default">Kayıt Ol</button>
					</form>
				</div>
				<!--/register form-->
			</div>

		</div>
	</div>
</section>
<!--/form-->

