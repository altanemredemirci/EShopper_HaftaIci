@using CORE.Entities
@model List<Brand>
<div class="brands_products">
	<!--brands_products-->
	<h2>Brands</h2>
	<div class="brands-name">
		<ul class="nav nav-pills nav-stacked">
			@foreach (var item in Model)
			{
				<li><a href="/Home/ProductsByBrand?id=@item.Id"> <span class="pull-right">(@item.Products.Count)</span>@item.Name</a></li>
			}
			
		</ul>
	</div>
</div><!--/brands_products-->