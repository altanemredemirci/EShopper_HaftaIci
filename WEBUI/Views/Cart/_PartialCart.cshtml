@model Cart


        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                    <tr class="cart_menu">
                        <td class="image">Item</td>
                        <td class="description"></td>
                        <td class="price">Price</td>
                        <td class="quantity">Quantity</td>
                        <td class="total">Total</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (CartItem item in Model.CartItems)
                    {
                        <tr>
                            <td class="cart_product">
                                <a href=""><img src="~/images/home/@item.Product.Images[0].Url" alt="" width="90"></a>
                            </td>
                            <td class="cart_description">
                                <h4><a href="">@item.Product.Name</a></h4>
                                <p>Web ID: @item.Product.Id</p>
                            </td>
                            <td class="cart_price">
                                <p id="price@(item.Id)">$@item.Product.Price</p>
                            </td>
                            <td class="cart_quantity">
                                <div class="cart_quantity_button">
                                    <a class="btn btn-default" onclick="Arttir(@item.Id)"> + </a>
                                    <input class="cart_quantity_input" id="itemQuantity@(item.Id)" type="text" name="quantity" value="@item.Quantity" autocomplete="off" size="2">
                                    <a class="btn btn-default" onclick="Azalt(@item.Id)"> - </a>
                                </div>
                            </td>
                            <td class="cart_total">
                                <p class="cart_total_price" id="total@(item.Id)">$@item.Total</p>
                            </td>
                            <td class="cart_delete">
                                <a class="cart_quantity_delete" href="/Cart/DeleteFromCart?productId=@item.Id&cartId=@item.CartId"><i class="fa fa-times"></i></a>
                                @* <a class="cart_quantity_delete" asp-controller="Cart" asp-action="DeleteFromCart" asp-route-productId="@item.Id"><i class="fa fa-times"></i></a> *@
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
